<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:clipToPadding="false">

    <!-- App Logo with subtle animation -->

    <!-- Title with modern typography -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80sp"
        android:contentDescription="@string/app_icon"
        android:src="@drawable/ic_pin_lock"
        android:scaleType="centerInside"
        tools:ignore="ImageContrastCheck" />


    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_pin"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="32dp"
        android:alpha="0.9" />

    <!-- PIN Input Boxes with spacing and shadow -->
    <LinearLayout
        android:id="@+id/pinContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- PIN Digit 1 -->
        <EditText
            android:id="@+id/pin1"
            style="@style/PinDigitStyle"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_input_background_default"
            android:hint="@string/digit_1"
            android:importantForAutofill="no"
            android:inputType="numberPassword"
            android:textColorHint="@color/transparent"
             />

        <!-- PIN Digit 2 -->
        <EditText
            android:id="@+id/pin2"
            style="@style/PinDigitStyle"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_input_background_default"
            android:hint="@string/digit_2"
            android:importantForAutofill="no"
            android:inputType="numberPassword"
            android:textColorHint="@color/transparent" />

        <!-- PIN Digit 3 -->
        <EditText
            android:id="@+id/pin3"
            style="@style/PinDigitStyle"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_input_background_default"
            android:hint="@string/digit_3"
            android:importantForAutofill="no"
            android:inputType="numberPassword"
            android:textColorHint="@color/transparent" />

        <!-- PIN Digit 4 -->
        <EditText
            android:id="@+id/pin4"
            style="@style/PinDigitStyle"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_input_background_default"
            android:hint="@string/digit_3"
            android:importantForAutofill="no"
            android:inputType="numberPassword"
            android:textColorHint="@color/transparent" />

        <!-- PIN Digit 5 -->
        <EditText
            android:id="@+id/pin5"
            style="@style/PinDigitStyle"
            android:background="@drawable/pin_input_background_default"
            android:hint="@string/digit_5"
            android:importantForAutofill="no"
            android:inputType="numberPassword"
            android:textColorHint="@color/transparent" />
    </LinearLayout>


</LinearLayout>